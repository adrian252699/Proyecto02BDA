<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="LaboratorioComputo" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entidades.AdministradorDominio</class>
    <class>entidades.AlumnoDominio</class>
    <class>entidades.BloqueoAdministradorAlumnoDominio</class>
    <class>entidades.CarreraDominio</class>
    <class>entidades.ComputadoraDominio</class>
    <class>entidades.ComputadoraLaboratorioDominio</class>
    <class>entidades.LaboratorioDominio</class>
    <class>entidades.LaboratorioUnidadAcademicaDominio</class>
    <class>entidades.UnidadAcademicaDominio</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/LaboratorioComputo?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="TuPasswordWorkbench"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
